                android:endColor="#036900"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="#313131"
                />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="1dp"
                />
            <gradient
                android:angle="90"
                android:centerX="90%"
                android:centerColor="#041e00"
                android:startColor="#036900"
                android:endColor="#036900"
                android:type="linear"
                />
            <padding
